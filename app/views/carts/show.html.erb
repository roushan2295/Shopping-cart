<div class="container">
  <div class="">
    <h3 class="text-center"><%= @cart_name %></h3>
    <br>
    <table class="table table-striped table-bordered ">
      <thead>
      <tr>
        <th>S.No.</th>
        <th>Title</th>
        <th>Image</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Sub-Total</th>
      </tr>
      </thead>
      <tbody>
      <% @item.each_with_index do |item, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.title %></td>
          <td><%= image_tag item.img, class:"item-image-size"  %></td>
          <td><%= item.quantity %>
            <%= button_to "Increase", increase_quantity_path(item_id: item.id), :method => :patch %>
            <%= button_to "Decrease", decrease_quantity_path(item_id: item.id), :method => :patch %>
          </td>
          <td><%= item.price %></td>
          <td><%= (item.price) * (item.quantity)%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>
    <div><b class="font-16">Total Price : <%= @total_price  %></b></div>
    <%= button_to "Delete Cart", delete_cart_path(@cart.id), :method => :delete %>
  </div>
</div>