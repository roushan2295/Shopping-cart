<div class="profiler-trivial-gap-container" style="margin: 1.5%;">
  <div class="card-body">
    <h3 class="text-center">My Carts</h3>
    <br>
    <table class="table table-striped table-bordered ">
      <thead>
      <tr>
        <th>S.No.</th>
        <th>Title</th>
        <th>Total</th>
        <th>Number</th>
      </tr>
      </thead>
      <tbody>
      <% @carts.each_with_index do |cart, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= cart.title %></td>
          <td><%= cart.total %></td>
          <td><%= link_to cart.number, show_cart_path(cart.id) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>